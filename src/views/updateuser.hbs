    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Karla:400,700&display=swap');

        .font-family-karla {
            font-family: karla;
        }

        .bg-sidebar {
            background: #3d68ff;
        }

        .cta-btn {
            color: #3d68ff;
        }

        .upgrade-btn {
            background: #1947ee;
        }

        .upgrade-btn:hover {
            background: #0038fd;
        }

        .active-nav-link {
            background: #1947ee;
        }

        .nav-item:hover {
            background: #1947ee;
        }

        .account-link:hover {
            background: #3d68ff;
        }
    </style>
</head>

<body class="bg-gray-100 font-family-karla flex">

    <aside class="relative bg-sidebar h-screen w-64 hidden sm:block shadow-xl fixed ">
        <div class="p-6">
            <a href="/admindash" class="text-white text-3xl font-semibold uppercase hover:text-gray-300">Admin</a>

        </div>
        <nav class="text-black text-base font-semibold pt-3 space-y-2">
            <a href="/admindash" class="flex items-center active-nav-link text-white py-4 pl-6 nav-item">
                <i class="fas fa-tachometer-alt mr-3"></i>
                Dashboard
            </a>
            <a href="/requestaccount" class="flex items-center  text-white py-4 pl-6 nav-item">
                <i class="fas fa-tachometer-alt mr-3"></i>
                Request accounts
            </a>



        </nav>
        <a href="#"
            class="absolute w-full upgrade-btn bottom-0 active-nav-link text-white flex items-center justify-center py-4">
            wEBSITEEX
        </a>
    </aside>

    <div class="w-full flex flex-col h-screen overflow-y-hidden">
        <!-- Desktop Header -->
        {{!-- {{>adminh}} <!-- Mobile Header & Nav --> --}}


        <div class="mx-8 my-6 h-screen">
            <h1 class="font-bold text-3xl pb-6 ">update User</h1>



            <div class="relative overflow-x-auto ">

                <form action="/updateuser" method="post" enctype="application/x-www-form-urlencoded" class="" >
                    <div class="flex justify-between space-y-4">
                        <div class="flex flex-col space-y-2">
                            <label for="">Name</label>
                            <input type="text" name="fname" value="{{finduser.fname}}">
                        </div>
                        <div class="flex flex-col space-y-2">
                            <label for="">Email</label>
                            <input type="text" name="email" value="{{finduser.email}}">
                        </div>
                        <div class="flex flex-col space-y-2">
                            <label for="">Phone</label>
                            <input type="text"  name="phone" value="{{finduser.phone}}">
                        </div>
                       


                    </div>

                    <div class="flex justify-between space-y-4">
                         <div class="flex flex-col space-y-2">
                            <label for="">profit</label>
                            <input type="text" name="profit" value="{{finduser.profit}}">
                        </div>
                        <div class="flex flex-col space-y-2">
                            <label for="">Deposit</label>
                            <input type="text" name="deposit" value="{{finduser.deposit}}">
                        </div>
                        <div class="flex flex-col space-y-2">
                            <label for="">Withdraw</label>
                            <input type="text" name="withdraw" value="{{finduser.withdraw}}">
                        </div>

                    </div>
                        <button type="submit" class="px-4 py-2 rounded bg-black text-white border border-black hover:bg-white hover:text-black ">Update user</button>
                </form>
            </div>





        </div>


</body>

</html>